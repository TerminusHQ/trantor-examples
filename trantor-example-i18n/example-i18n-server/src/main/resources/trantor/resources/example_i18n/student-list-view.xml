<View title="学生列表">
    <Table key="table" model="example_i18n_Student">
        <Search>
            <Fields>
                <Field name="name"/>
                <Field name="gender"/>

            </Fields>
        </Search>

        <RecordActions label="操作">
            <Action label="详细" openViewType="Dialog" action="example_i18n_Student_toDetail"/>
            <Action label="编辑" openViewType="Blank" action="example_i18n_Student_toEdit"/>
            <Action label="删除" after="Refresh" confirm="确定要删除？" action="example_i18n_Student_delete"/>
        </RecordActions>

        <Fields>
            <Field name="name"/>
            <Field name="gender"/>
            <Field name="score"/>
        </Fields>

        <Actions>
            <Action label="创建" openViewType="Dialog" action="example_i18n_Student_toEdit"/>
        </Actions>

    </Table>

</View>